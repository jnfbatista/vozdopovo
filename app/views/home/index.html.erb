                  <span class="separator"></span>
                  <li>Ministério I</li>
                  <span class="separator"></span>
                  <li>Ministério I</li>
              </ul>

          </section>

          <section id="map">
            <% @count = 0 %>
            <% @nums.each do |n| %>
              <span class="pos" style="left: <%= n[0] %>px; top: <%= n[1] %>px" id="<%= @ouves[@count].id %>">
                <%= @count %>
              </span>

              <% @count = @count + 1%>
            <% end %>
          </section>

      </aside>

      <section id="ouves">

        <% @ouves.each do |o| %>

          <a class="ouve clearfix" id="<%= o.id %>" href="./ouves/<%= o.id %>">

              <%= image_tag("helio.png", :class => "photo") %>

              <div class="info">
                  <h3><%= o.titulo %></h3>

                  <div class="tags">
                      <span>medo</span>
                      <span>não</span>
                      <span>assiste</span>
                  </div>
              </div>

              <div class="social">
                  <div class="socialItem">
                      <span>3</span>
                      <%= image_tag("comments.png", :alt => "Comentários") %>
                  </div>

                  <div class="socialItem">
                      <span>3</span>
                      <%= image_tag("like.png", :alt => "Fixes") %>
                  </div>

              </div>
              
          </a>

          <% if o != @ouves.last %>
            <span class="separator"></span>
          <% end %>

        <% end %>

      </section>

      <section id="ouve">

          <%= image_tag("hipsterfail.jpg", :class => "photo") %>

          <div class="info clearfix">
              <h3>coiso</h3>

              <div class="tags">
                  <span>medo</span>
                  <span>não</span>
