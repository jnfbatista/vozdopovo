  <header>
    <section class="container">

      <a id="logo" href=".">
        <h1>A voz do povo</h1>
        <h2>Dá voz à tua voz</h2>
      </a>

      <% form_for :ouve, @Ouve,  :html => {:id => "signup", :class => "clearfix"} do |f| %>

          <label for="title">Eu acho que</label>
          <%= f.text_field :titulo, :id => "title", :placeholder => "coiso" %>

          <div id="submit" class="clearfix">
              <span>Faz-te ouvir!</span>
              <%= image_tag("submit_button_icon.png", :alt => "Submete a cena, moço") %>
          </div>

          <div id="formHidden" class="clearfix">

            <%= f.label :ideia, "Mais detalhadamente, "%>
            <%= f.text_area :ideia %>

            <%= f.collection_select( :municipio_id , Municipio.all, :id, :nome, {:include_blank => true}) %>

            <%= f.collection_select( :ministerio_id, Ministerio.all, :id, :nome, {:include_blank => true}) %>

            <div class="clearfix"></div>

            <%= link_to "Liga-te através do Facetruques", "/auth/facebook", :id => "facebookConnect" %>

          </div>      

      <% end %>

    </section>

  </header>

  <section id="content" class="container">

    <a id="back" href="">« Voltar</a>

    <div class="wrapper clearfix">

      <aside class="clearfix">

          <section id="ministerio">

              <div id="ministerioHead" class="clearfix">
                  <h3>Saúde</h3>
                  <%= image_tag("ministerio_arrow.png", :alt => "Muda o ministério, moço") %>
              </div>

              <ul>
                  <li>Ministério I</li>
                  <span class="separator"></span>
                  <li>Ministério I</li>
                  <span class="separator"></span>
                  <li>Ministério I</li>
